@using OpenTelemetry.Models
@{
    ViewData["Title"] = "Home Page";
}
@model SuccessViewModel

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to Open Telemetry Demo</h1>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "PointOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Fire Point Operations</button><span color="blue">@Model?.PointOpsMessage</span>
                </div>
            }
        </div>
    </div>

     <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "MultiRegionPointOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Fire Point Operations (Multi Region Account)</button><span color="blue">@Model?.MrPointOpsMessage</span>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "QueryOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Fire Single Partition Query Operations</button> <span color="blue">@Model?.QueryOpsMessage</span>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "QueryCrossPartitionOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Fire Cross Partition Query Operations</button> <span color="blue">@Model?.CrossQueryOpsMessage</span>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "StreamOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Fire Stream Operations</button> <span color="blue">@Model?.StreamOpsMessage</span>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 p-3">
            @using (Html.BeginForm("Index", "BulkOperation", FormMethod.Post))
            {
                <div class="item">
                    <button type="submit" class="btn btn-primary">Bulk Operations</button> <span color="blue">@Model?.BulkOpsMessage</span>
                </div>

            }
        </div>
    </div>
</div>
